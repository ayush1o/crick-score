{
    "manifest_version": 3,
    "name": "Live Cricket Scores",
    "version": "1.0",
    "description": "Displays live IPL and cricket scores.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["https://api.cricketdata.org/*"],
    "host_permissions": ["https://api.cricketdata.org/*"]
  }